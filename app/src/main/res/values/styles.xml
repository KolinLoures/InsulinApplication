<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FF4081</item>
        <!-- Blue -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="textViewEmail">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/Roboto_Light</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textViewName">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textViewTitleCard">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
    </style>

    <style name="textViewSupportingText">
        <item name="android:fontFamily">@string/Roboto_Light</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>

