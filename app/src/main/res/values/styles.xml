<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FF4081</item>
        <!-- Blue -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>


    <style name="textViewEmail">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/Roboto_Light</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="topTextViewRvItem">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
    </style>

    <style name="topTextViewRvItemRight">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@string/Roboto_Light</item>
    </style>

    <style name="textViewCalculationItem" parent="topTextViewRvItemLeft">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="textViewCalculationItemBottom" parent="topTextViewRvItemRight">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="topTextViewRvItemLeft">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
    </style>

    <style name="bottomTextViewRvItem">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@string/Roboto_Regular</item>
    </style>


    <style name="textViewName">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="textViewTitleCard">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
    </style>

    <style name="textViewSupportingText">
        <item name="android:fontFamily">@string/Roboto_Light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewResultLeft" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="textViewResultRight" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/Roboto_Light</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="btnStyleDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="textViewTitleDialog">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@string/Roboto_Medium</item>
    </style>

</resources>

