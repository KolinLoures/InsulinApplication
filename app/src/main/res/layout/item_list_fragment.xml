<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_food_name_product"
            style="@style/topTextViewRvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название продукта" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_food_b"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Б: " />

            <TextView
                android:id="@+id/list_food_j"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Ж: " />

            <TextView
                android:id="@+id/list_food_y"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="У: " />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorWhite"
            android:id="@+id/list_food_add_to_favorite"
            android:src="@drawable/ic_star_border_black_24dp" />
    </FrameLayout>


</LinearLayout>