<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_calculation_product_name"
                style="@style/topTextViewRvItemLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Название продукта"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_calculation_product_weight"
                style="@style/topTextViewRvItemRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

            <TextView
                style="@style/topTextViewRvItemRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="г" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_calculation_product_b"
                style="@style/textViewCalculationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.0" />

            <TextView
                android:id="@+id/item_calculation_product_j"
                style="@style/textViewCalculationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="2.0" />

            <TextView
                android:id="@+id/item_calculation_product_y"
                style="@style/textViewCalculationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.0" />

            <TextView
                android:id="@+id/item_calculation_product_y_weight"
                style="@style/textViewCalculationItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.0" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/textViewCalculationItemBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Б" />

            <TextView
                style="@style/textViewCalculationItemBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ж" />

            <TextView
                style="@style/textViewCalculationItemBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="У" />

            <TextView
                style="@style/textViewCalculationItemBottom"
                android:id="@+id/item_calculation_product_text_y_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="У на 100 г" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:id="@+id/item_calculation_change_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_create_black_24dp"
                    android:text="@string/back" />

                <ImageButton
                    android:id="@+id/item_calculation_remove_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:text="@string/compute" />
            </LinearLayout>

        </FrameLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>