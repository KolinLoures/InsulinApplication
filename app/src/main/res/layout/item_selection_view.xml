<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:id="@+id/avatar_rv_item"
        android:src="@color/colorPrimary"/>

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Какой то ресторан"
            android:id="@+id/name_rv_item"
            android:layout_marginStart="72dp"
            style="@style/topTextViewRvItem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Короткое описание"
            android:id="@+id/description_rv_item"
            android:layout_marginStart="72dp"
            style="@style/bottomTextViewRvItem" />
    </LinearLayout>

</FrameLayout>