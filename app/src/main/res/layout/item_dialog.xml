<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_name_product"
            style="@style/topTextViewRvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название продукта" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_food_b"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Б: " />

            <TextView
                android:id="@+id/dialog_food_j"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="Ж: " />

            <TextView
                android:id="@+id/dialog_food_y"
                style="@style/bottomTextViewRvItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:text="У: " />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <ImageButton
            android:id="@+id/dialog_remove_from_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_gravity="center_vertical|end"
            android:background="@color/colorWhite"/>

    </FrameLayout>


</LinearLayout>
