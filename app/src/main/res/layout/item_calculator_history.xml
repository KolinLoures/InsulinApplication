<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                style="@style/textViewSupportingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:id="@+id/item_history_value_part_of_day"
                android:text="20"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textViewTitleCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Результат #"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_history_value_num"
                    style="@style/textViewTitleCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/textViewSupportingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ХЕ: "
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_history_value_he"
                    style="@style/textViewSupportingText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20"
                    android:textColor="@color/colorWhite" />

                <TextView
                    style="@style/textViewSupportingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="K1: "
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_history_value_k_one"
                    style="@style/textViewSupportingText"
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20"
                    android:textColor="@color/colorWhite" />

                <TextView
                    style="@style/textViewSupportingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="K2: "
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_history_value_k_two"
                    style="@style/textViewSupportingText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="20"
                    android:textColor="@color/colorWhite" />


                <TextView
                    style="@style/textViewSupportingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ГИ: "
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:id="@+id/item_history_value_gi"
                    style="@style/textViewSupportingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="60"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_history_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Список продуктов" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_bread_unit" />

            <TextView
                android:id="@+id/item_history_he"
                style="@style/topTextViewRvItemLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="80 г"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_injection" />

            <TextView
                android:id="@+id/item_history_insulin"
                style="@style/topTextViewRvItemLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="80 г"

                android:textAlignment="center" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/item_history_btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_clear_black_24dp" />

            <ImageButton
                android:id="@+id/item_history_btn_re_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_calculator_24dp" />

        </FrameLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>